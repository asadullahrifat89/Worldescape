<Page
    x:Class="Worldescape.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Worldescape"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <!--  Current user holder, becomes visible after login  -->
        <Grid
            x:Name="CurrentUserHolder"
            Grid.Row="0"
            Height="50"
            Visibility="Collapsed">

            <Button
                Margin="10,0"
                HorizontalAlignment="Right"
                FontSize="15"
                FontWeight="Semibold"
                Style="{StaticResource MaterialDesign_HyperlinkButton_Style}">
                <Button.Content>
                    <StackPanel Orientation="Horizontal">

                        <Ellipse
                            Width="40"
                            Height="40"
                            ClipToBounds="True">
                            <Ellipse.Fill>
                                <ImageBrush ImageSource="{Binding ImageUrl, Mode=OneWay, TargetNullValue='ms-appx:///Images/StoreLogo.png'}" Stretch="Uniform" />
                            </Ellipse.Fill>
                        </Ellipse>
                        <!--<Image Margin="5,0">
                            <Image.Source>
                                <BitmapImage UriSource="{Binding ImageUrl, Mode=OneWay, TargetNullValue='ms-appx:///Images/StoreLogo.png'}" />
                            </Image.Source>
                        </Image>-->
                        <TextBlock VerticalAlignment="Center" Text="{Binding FirstName, Mode=OneWay}" />
                    </StackPanel>
                </Button.Content>
            </Button>

            <Grid.Effect>
                <DropShadowEffect
                    x:Name="DropShadowEffect"
                    BlurRadius="6"
                    Direction="-30"
                    Opacity="0.4"
                    ShadowDepth="0"
                    Color="Gray" />
            </Grid.Effect>
        </Grid>

        <!--  Frame that hosts pages  -->
        <Frame
            x:Name="PageContainer"
            Grid.Row="1"
            HorizontalContentAlignment="Stretch"
            VerticalContentAlignment="Stretch"
            JournalOwnership="Automatic">
            <Frame.UriMapper>
                <UriMapper>
                    <UriMapping MappedUri="/Pages/{page_name}.xaml" Uri="/{page_name}" />
                </UriMapper>
            </Frame.UriMapper>
            <Frame.RenderTransform>
                <TranslateTransform />
            </Frame.RenderTransform>
        </Frame>

    </Grid>

</Page>
