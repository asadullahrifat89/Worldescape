<Page
    x:Class="Worldescape.Pages.InsideWorldPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Worldescape.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <!--  Top bar buttons  -->
            <StackPanel x:Name="TopButtonHolder" Orientation="Horizontal">

                <Button
                    x:Name="CraftButton"
                    Height="50"
                    MinWidth="100"
                    Margin="10"
                    Click="CraftButton_Click"
                    Content="Craft"
                    FontSize="20"
                    Style="{StaticResource MaterialDesign_Button_Style}" />

                <Button
                    x:Name="ConstructsAddButton"
                    Height="50"
                    MinWidth="100"
                    Margin="10"
                    Click="ConstructsAddButton_Click"
                    Content="Add"
                    FontSize="20"
                    Style="{StaticResource MaterialDesign_Button_Style}"
                    Visibility="Collapsed" />

                <Button
                    x:Name="ConstructMoveButton"
                    Height="50"
                    MinWidth="100"
                    Margin="10"
                    Click="ConstructMoveButton_Click"
                    Content="Move"
                    FontSize="20"
                    Style="{StaticResource MaterialDesign_Button_Style}"
                    Visibility="Collapsed" />

                <Button
                    x:Name="ConstructCloneButton"
                    Height="50"
                    MinWidth="100"
                    Margin="10"
                    Click="ConstructCloneButton_Click"
                    Content="Clone"
                    FontSize="20"
                    Style="{StaticResource MaterialDesign_Button_Style}"
                    Visibility="Collapsed" />

                <Button
                    x:Name="ConstructDeleteButton"
                    Height="50"
                    MinWidth="100"
                    Margin="10"
                    Click="ConstructDeleteButton_Click"
                    Content="Delete"
                    FontSize="20"
                    Style="{StaticResource MaterialDesign_Button_Style}"
                    Visibility="Collapsed" />

                <Button
                    x:Name="ConstructSendBackwardButton"
                    Height="50"
                    MinWidth="100"
                    Margin="10"
                    Click="ConstructSendBackwardButton_Click"
                    Content="Send Backward"
                    FontSize="20"
                    Style="{StaticResource MaterialDesign_Button_Style}"
                    Visibility="Collapsed" />

                <Button
                    x:Name="ConstructBringForwardButton"
                    Height="50"
                    MinWidth="100"
                    Margin="10"
                    Click="ConstructBringForwardButton_Click"
                    Content="Bring Forward"
                    FontSize="20"
                    Style="{StaticResource MaterialDesign_Button_Style}"
                    Visibility="Collapsed" />

                <Button
                    x:Name="ConstructScaleUpButton"
                    Height="50"
                    MinWidth="100"
                    Margin="10"
                    Click="ConstructScaleUpButton_Click"
                    Content="Scale Up"
                    FontSize="20"
                    Style="{StaticResource MaterialDesign_Button_Style}"
                    Visibility="Collapsed" />

                <Button
                    x:Name="ConstructScaleDownButton"
                    Height="50"
                    MinWidth="100"
                    Margin="10"
                    Click="ConstructScaleDownButton_Click"
                    Content="Scale Down"
                    FontSize="20"
                    Style="{StaticResource MaterialDesign_Button_Style}"
                    Visibility="Collapsed" />

                <TextBlock
                    x:Name="OperationalConstructStatus"
                    VerticalAlignment="Center"
                    FontSize="20"
                    FontWeight="Bold" />

                <ContentControl x:Name="OperationalConstructHolder" />

                <!--<TextBlock
                x:Name="InteractiveConstructStatus"
                VerticalAlignment="Center"
                FontSize="20"
                FontWeight="Bold" />-->

                <ContentControl x:Name="InteractiveConstructHolder" />
            </StackPanel>

            <!--  Top bar statuses  -->
            <StackPanel Grid.Column="1">

                <TextBlock
                    VerticalAlignment="Center"
                    FontSize="20"
                    FontWeight="Bold">
                    <Run Text="People: " />
                    <Run x:Name="ParticipantsCount" />
                </TextBlock>

            </StackPanel>

        </Grid>

        <ScrollViewer
            x:Name="FrameScrollViewer"
            Grid.Row="1"
            HorizontalScrollBarVisibility="Auto"
            IsTabStop="False"
            VerticalScrollBarVisibility="Auto">

            <Canvas
                x:Name="Canvas_root"
                Grid.Row="1"
                Width="8000"
                Height="8000"
                AllowDrop="True"
                Background="Transparent"
                PointerPressed="Canvas_root_PointerPressed" />

        </ScrollViewer>

    </Grid>
</Page>